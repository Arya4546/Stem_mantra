    }
    .social-links a {
      display: inline-block;
      width: 40px;
      height: 40px;
      background-color: rgba(255, 255, 255, 0.1);
      border-radius: 50%;
      margin: 0 8px;
      line-height: 40px;
      color: #ffffff;
      text-decoration: none;
      font-size: 18px;
    }
    .footer-text {
      color: rgba(255, 255, 255, 0.6);
      font-size: 12px;
    }
    .footer-address {
      color: rgba(255, 255, 255, 0.5);
      font-size: 11px;
      margin-top: 15px;
    }
    .unsubscribe {
      color: rgba(255, 255, 255, 0.4);
      font-size: 11px;
      margin-top: 20px;
    }
    .unsubscribe a {
      color: rgba(255, 255, 255, 0.5);
      text-decoration: underline;
    }
  </style>
</head>
