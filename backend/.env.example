# ===========================================
# STEM Mantra Backend - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:yourpassword@localhost:5432/stem_mantra_db

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# CORS (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Brevo (Sendinblue) Email Service
# Get your API key from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your-brevo-api-key
BREVO_SENDER_EMAIL=noreply@stemmantra.com
BREVO_SENDER_NAME=STEM Mantra

# Cloudinary Image Storage
# Get credentials from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_FOLDER=stem-mantra

# Razorpay Payment Gateway
# Get credentials from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_xxxxx
RAZORPAY_KEY_SECRET=your-razorpay-secret
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret

# OTP Settings
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6
OTP_RESEND_COOLDOWN_SECONDS=60

# Default Admin User (created on first startup)
ADMIN_EMAIL=admin@stemmantra.com
ADMIN_PASSWORD=Admin@123456
ADMIN_FIRST_NAME=Super
ADMIN_LAST_NAME=Admin

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Logging
LOG_LEVEL=debug
